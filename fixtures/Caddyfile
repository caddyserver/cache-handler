{
    experimental_http3
    cache {
        api {
            basepath /souin-api
            security {
                secret your_secret_key
                enable true
                users [
                    {
                        username user1
                        password test
                    }
                ]
            }
            souin {
                security true
                enable true
            }
        }
        default_cache {
            headers [
                Authorization
            ]
            port {
                web 80
                tls 443
            }
            regex {
                exclude 'ARegex'
            }
            ttl 1000
        }
        reverse_proxy_url 'http://domain.com:81'
        ssl_providers [
            traefik
        ]
        urls {
            'domain.com/' {
                ttl 100
                headers [
                    Authorization
                    'Content-Type'
                ]
            }
            'mysubdomain.domain.com' {
                ttl 50
                headers [
                    Authorization
                    'Content-Type'
                ]
            }
        }
    }
}

localhost

route /cache-s-maxage {
    cache
    header Cache-Control "s-maxage=5, max-age=1"
    respond "Hello, s-maxage!"
}

route /cache-max-age {
    cache
    header Cache-Control "max-age=60"
    respond "Hello, max-age!"
}
